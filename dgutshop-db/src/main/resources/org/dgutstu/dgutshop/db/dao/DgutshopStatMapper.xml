    <select id="statOrder" resultType="map">
        select
        substr(create_time,1,7) as day,
        count(id) as orders,
        count(distinct order_status) as status,
        from dgutshop_order
        where order_status in(401,402)
        group by substr(add_time,1,10)
    </select>
