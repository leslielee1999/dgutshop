
.radio {
	display: inline-block;
	height: 60rpx;
	line-height: 60rpx;
	padding: 0 22rpx;
	background: #f7f7f7;
	border: 1px solid #FFFFFF;
	-webkit-border-radius: 10rpx;
	        border-radius: 10rpx;
	font-size: 26rpx;
	color: #F5F5F7;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.radio:not(:last-child) {
	margin: 0 20rpx 30rpx 0;
}
.radio-primay {
	background: #F8EEE3;
	color: #D0A16D;
	border: 1px solid #F8EEE3;
}
.radio-width-default {
	width: 120rpx;
	text-align: center;
	padding: 0;
}

