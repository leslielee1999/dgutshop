.tabs-box {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  position: -webkit-sticky;
  position: sticky;
  z-index: 10;
  background-color: white;
  height: 45px;
}
.tabs-box .hx-tabs {
  position: relative;
  display: flex;
  height: 100%;
  width: 100%;
  justify-content: space-evenly;
}
.tabs-box .hx-tabs-item {
  display: flex;
  flex: 1;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 70px;
  color: #666666;
}
.tabs-box .hx-tabs-item text {
  font-size: 17px;
}
.tabs-box .hx-tabs-active {
  color: #333333;
  font-weight: bold;
}
.tabs-box .hx-tabs-slider-box {
  position: absolute;
  display: flex;
  justify-content: center;
  bottom: 0;
  width: 20%;
}
.tabs-box .hx-tabs-slider {
  display: flex;
  background: #000000;
  width: 68px;
  height: 3px;
}
.main {
  position: relative;
  background-color: #ffffff;
  height: 100%;
  width: 100%;
}
.main #mainSwiper {
  background-color: #eeeeee;
  height: 100%;
  width: 100%;
}
.main #mainSwiper .nullOrder {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 40px auto;
}
.main #mainSwiper .nullOrder image {
  width: 130px;
  height: 130px;
}
.main #mainSwiper .nullOrder .tit {
  display: flex;
  flex-direction: column;
  font-size: 16px;
  font-weight: bold;
  color: #ecb57a;
  margin-top: 6px;
}
.main #mainSwiper .scroll-items {
  height: 100%;
}
.main #mainSwiper .scroll-items .order-item {
  padding: 5px 20px;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin: 8px 0px;
}
.main #mainSwiper .scroll-items .order-item .item-top {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 12px 0;
}
.main #mainSwiper .scroll-items .order-item .item-top .row1 {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 4px;
}
.main #mainSwiper .scroll-items .order-item .item-top .row1 .tit {
  flex: 1;
  font-size: 16px;
  font-weight: 700px;
  color: #000000;
}
.main #mainSwiper .scroll-items .order-item .item-top .row1 .right {
  font-size: 14px;
  color: #505050;
}
.main #mainSwiper .scroll-items .order-item .item-top .row2 {
  font-size: 10px;
  color: #787878;
}
.main #mainSwiper .scroll-items .order-item .item-center {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 12px;
  color: #666;
  font-size: 14px;
  width: 100%;
}
.main #mainSwiper .scroll-items .order-item .item-center .left {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.main #mainSwiper .scroll-items .order-item .item-center .left image {
  border-radius: 6px;
  height: 60px;
  width: 60px;
  margin-right: 10px;
}
.main #mainSwiper .scroll-items .order-item .item-center .right {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.main #mainSwiper .scroll-items .order-item .item-center .right .total-price {
  font-size: 16px;
  color: #000000;
  font-weight: bold;
}
.main #mainSwiper .scroll-items .order-item .item-center .right .count {
  font-size: 13px;
  color: #8f8f8f;
}
.main #mainSwiper .scroll-items .order-item .item-bottom {
  display: flex;
  flex-direction: row;
  margin-top: 12px;
  margin-bottom: 15px;
}
.main #mainSwiper .scroll-items .order-item .item-bottom .left {
  flex: 1;
}
.main #mainSwiper .scroll-items .order-item .item-bottom .btn {
  padding: 7px 14px;
  border: 1px solid #cdcdcd;
  font-size: 12px;
  color: #6d6d6d;
  border-radius: 3px;
  transition: all 0.2s;
  background: #fff;
  margin-left: 10px;
}
.main #mainSwiper .scroll-items .order-item .item-bottom .btn:active {
  color: #888;
  background: #c5c5c5;
}
.main #mainSwiper .scroll-items .order-item .item-bottom .bg-yellow {
  background: #FFFFFF;
  border-color: #DBA871;
  color: #DBA871;
}
.main #mainSwiper .scroll-items .order-item .item-bottom .bg-yellow:active {
  background: #DBA871;
}

